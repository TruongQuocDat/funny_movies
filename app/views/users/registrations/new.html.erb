<h1 class="text-center">Sign Up</h1>

<div class="row mx-auto w-75">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class='form w-75 mx-auto'>
      <div class="mb-3">
        <%= f.email_field :email, autocomplete: "off", autofocus: false, placeholder: 'Email Address', class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
      </div>
    </div>

    <div class="text-center">
      <%= link_to "Do you have account?", new_session_path(resource_name), class: 'text-decoration-none' %><br />
      <%= f.submit "Sign up", class: "btn btn-primary min-vw-25" %>
    </div>
  <% end %>
</div>
